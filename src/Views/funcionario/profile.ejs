<% include ../template/topbar.ejs %>
    <style>
        .form-control-label {
            font-weight: bold
        }

        label {
            color:black
        }

        .required {
            color: red;
            font-weight: 900
        }

    </style>
  
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <% if(erros.length > 0){ %>
                            <div class="sufee-alert alert with-close alert-danger alert-dismissible fade show">
                                A campos obrigatórios que não foram preenchidos, verifique os erros abaixo.
                                <div class="col-md-12">
                                    <ul>
                                        <% for(i=0; i<erros.length; i++){ %>
                                            <li>
                                                <%=erros[i].msg%>
                                            </li>
                                            <% } %>
                                    </ul>
                                </div>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <% } %>

                                <div class="card-header"> Perfil do Funcionário</div>
                                <div class="card-body">
                                    <div class="card-body card-block">
                                        <form class="form-horizontal" action="/funcionario/atualizar" method="post">
                                          
                        <div class="col-md-12">
                                             
                                     <div class="col-md-4">
                                          <div class="form-group">
                                              <label class="form-control-label">Nome Completo<span class="required">*</span>
                                              </label>
                                                  <input disabled type="text" value='<%=funcionario.nome%>' name="nome" class="form-control">
                                              </div>
                                            </div> 
                                            <div class="col-md-4">
                                            <div class="form-group">
                                            <label class="form-control-label">Cargo<span class="required">*</span>
                                              </label>
                                                 <input disabled type="text" value='<%=funcionario.cargo%>' class="form-control" id="data_nascimento_responsavel" name="cargo">        </div>
                                              </div>
                                  
                                    <div class="col-md-4">
                                         <div class="form-group">
                                              <label class="form-control-label">Setor<span class="required">*</span>
                                              </label>
                                                  <input type="text" value='<%=funcionario.setor%>' name="setor" disabled class="form-control">
                                              </div>
                                            </div>
                                          
                                        <div class="col-md-4">
                                          <div class="form-group">
                                              <label class="form-control-label">UA<span class="required">*</span>
                                              </label>
                                                  <input type="text" value='<%=funcionario.ua%>' name="ua" disabled class="form-control">
                                              </div> 
                                            </div> 
                                            <div class="col-md-4">
                                            <div class="form-group">
                                              <label class="form-control-label">UE</label>
                                                  <input type="text" disabled value='<%=funcionario.ue%>' name="ue" class="form-control">
                                              </div>
                                              </div>
                                            <div class="col-md-4">
                                            <div class="form-group">
                                              <label class="form-control-label">Email: <span class="required">*</span></label>
                                                  <input value='<%=funcionario.email%>'type="email" name="email" disabled class="form-control">
                                                  
                                                </div>  </div> 
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                      <label class="form-control-label">Telefone :<span class="required">*</span></label>
                                                          <input type="text" value='<%=funcionario.telefone%>' name="telefone" disabled class="form-control">
                                                        </div>  </div>

                                              <div class="col-md-4">
                                                    <div class="form-group">
                                                <label class="form-control-label">CPF :<span class="required">*</span>
                                              </label>
                                          <input type="text" value='<%=funcionario.cpf%>' data-msn_validacao="Preencha o cpf corretamente." name="cpf" disabled class="cpf form-control validar-cpf">
                                              </div>
                                              </div>
                                
                                            <div class="col-md-12">
                                                <br>
                                                <a class="pull-left btn btn-danger" href="/funcionarios">Voltar</a>
                                                
                                            </div>
                                        </form>
                                    </div>
                                </div>
                    </div>
                    <% include ../template/footer.ejs  %>
